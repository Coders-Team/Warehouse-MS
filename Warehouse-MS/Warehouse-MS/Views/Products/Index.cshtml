<div class="container-xxl flex-grow-2 container-p-y">
    <div class="card">
        <h5 class="card-header">Storage Product</h5>
        <div class="table-responsive text-nowrap">
            <table class="table">
                <thead class="table-light">
                    <tr>
                        <th>Name</th>
                        <th>ExpiredDate</th>
                        <th>SizeInUnit</th>
                        <th>Weight</th>
                        <th>Date</th>
                        <th>BarcodeNum</th>
                        <th>ACTIONS</th>
                    </tr>
                </thead>
                <tbody class="table-border-bottom-0">
                    @foreach (Product product in Model)
                    {
                        <tr>
                            <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>@product.Name</strong></td>
                            <td>@product.ExpiredDate</td>
                            <td>@product.SizeInUnit</td>
                            <td>
                                <span class="badge bg-label-primary me-1">@product.Weight</span>
                            </td>
                            <td>
                                @product.Date
                            </td>
                            <td>
                                @product.BarcodeNum
                            </td>
                            <td>
                                <div class="dropdown">
                                    <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                        <i class="bx bx-dots-vertical-rounded"></i>
                                    </button>
                                    <div class="dropdown-menu">
                                        <a class="dropdown-item" asp-action="Details" asp-route-id="@product.Id"> <i class="bx bx-edit-alt me-1"> </i> Details</a>
                                        <a class="dropdown-item" asp-action="Edit" asp-route-id="@product.Id"><i class="bx bx-edit-alt me-1"></i> Edit</a>
                                        <a class="dropdown-item"asp-action="DeleteProduct" asp-route-id="@product.Id"><i class="bx bx-trash me-1"></i> Delete</a>
                                    </div>
                                </div>
                            </td>
                        </tr>

                    }

                    </tbody>
            </table>
        </div>
    </div>
</div>
