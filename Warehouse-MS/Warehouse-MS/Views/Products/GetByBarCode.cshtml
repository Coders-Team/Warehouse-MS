@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@model Warehouse_MS.Models.Product


    <div class="card" style="width: 18rem;">
        <img src=@Model.Photo class="card-img-top" alt="...">
        <div class="card-body">
            <h5 class="card-title">Name: @Model.Name</h5>
            <p class="card-text">Weight: @Model.Weight</p>
            <p class="card-text">Size: @Model.SizeInUnit</p>
            <p class="card-text">Date: @Model.Date</p>
            <p class="card-text"> Expiration Date: @Model.ExpiredDate</p>
            <p class="card-text"> barcode: @Model.BarcodeNum</p>


            <a class="btn btn-primary" asp-action="Details" asp-route-id="@Model.Id">Details</a>
            <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
            <a class="btn btn-primary" asp-action="DeleteProduct" asp-route-id="@Model.Id">Delete</a>


        </div>

    </div>
