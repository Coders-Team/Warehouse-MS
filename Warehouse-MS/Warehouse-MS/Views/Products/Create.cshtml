@model Warehouse_MS.Models.DTO.ProductDto
@{
    Layout = "_Layout";
}




<div class="container-xxl flex-grow-2 container-p-y">
    <div class="container-xxl">
        <div class="authentication-wrapper authentication-basic container-p-y">
            <div class="authentication-inner">
                <!-- Register -->
                <div class="card">
                    <div class="card-body">
                        <div class="text-center">
                            <h4 class="mb-2">Create A Product</h4>
                        </div>
                        <form asp-controller="Products" asp-action="Create" method="post" enctype="multipart/form-data">


                            <div class="mb-3">
                                <label class="form-label" for="basic-icon-default-fullname"> Name</label>
                                <div class="input-group input-group-merge">
                                    <span id="basic-icon-default-fullname2" class="input-group-text">

                                        <i class='bx bx-home-alt'></i>
                                    </span>
                                    <input type="text"
                                           class="form-control"
                                           id="basic-icon-default-fullname"
                                           placeholder="Name"
                                           aria-label="Name"
                                           aria-describedby="basic-icon-default-fullname2"
                                           asp-for="@Model.Name" />
                                    @Html.ValidationMessageFor(x => x.Name)

                                </div>
                            </div>

                            <div class="mb-3">
                                <label class="form-label" for="basic-icon-default-company">Description</label>
                                <div class="input-group input-group-merge">
                                    <span id="basic-icon-default-company2" class="input-group-text">
                                        <i class='bx bxs-detail'></i>
                                    </span>
                                    <input type="text"
                                           id="basic-icon-default-company"
                                           class="form-control"
                                           placeholder="Description"
                                           aria-label="Description"
                                           aria-describedby="basic-icon-default-company2"
                                           asp-for="@Model.Description" />
                                </div>
                            </div>

                            <div class="mb-3">
                                <label class="form-label" for="basic-icon-default-company">Size In Unit</label>
                                <div class="input-group input-group-merge">
                                    <span id="basic-icon-default-company2" class="input-group-text">
                                        <i class="bx bx-buildings"></i>
                                    </span>
                                    <input type="number"
                                           id="basic-icon-default-company"
                                           class="form-control"
                                           placeholder="Size In Unit"
                                           aria-label="Size In Unit"
                                           aria-describedby="basic-icon-default-company2"
                                           asp-for="@Model.SizeInUnit" />
                                </div>
                            </div>

                            <div class="mb-3">
                                <label class="form-label" for="basic-icon-default-phone"> Date</label>
                                <div class="input-group input-group-merge">
                                    <span id="basic-icon-default-phone2" class="input-group-text">
                                        <i class='bx bx-area'></i>
                                    </span>
                                    <input type="date"
                                           id="basic-icon-default-phone"
                                           class="form-control phone-mask"
                                           placeholder="Date"
                                           aria-label="Date"
                                           aria-describedby="basic-icon-default-phone2"
                                           asp-for="@Model.Date" />
                                </div>
                            </div>

                            <div class="mb-3">
                                <label class="form-label" for="basic-icon-default-phone"> Expiration Date</label>
                                <div class="input-group input-group-merge">
                                    <span id="basic-icon-default-phone2" class="input-group-text">
                                        <i class='bx bx-area'></i>
                                    </span>
                                    <input type="date"
                                           id="basic-icon-default-phone"
                                           class="form-control phone-mask"
                                           placeholder="Expiration Date"
                                           aria-label="Expiration Date"
                                           aria-describedby="basic-icon-default-phone2"
                                           asp-for="@Model.ExpiredDate" />
                                </div>
                            </div>

                            <div class="mb-3">
                                <label class="form-label" for="basic-icon-default-phone"> Weight</label>
                                <div class="input-group input-group-merge">
                                    <span id="basic-icon-default-phone2" class="input-group-text">
                                        <i class='bx bx-area'></i>
                                    </span>
                                    <input type="number"
                                           id="basic-icon-default-phone"
                                           class="form-control phone-mask"
                                           placeholder="Weight"
                                           aria-label="Weight"
                                           aria-describedby="basic-icon-default-phone2"
                                           asp-for="@Model.Weight" />
                                </div>
                            </div>


                            <div class="mb-3">
                                <label class="form-label" for="basic-icon-default-phone"> Product Type Id</label>
                                <div class="input-group input-group-merge">
                                    <span id="basic-icon-default-phone2" class="input-group-text">
                                        <i class='bx bx-area'></i>
                                    </span>
                                    <input type="number"
                                           id="basic-icon-default-phone"
                                           class="form-control phone-mask"
                                           placeholder="Product Type Id"
                                           aria-label="Product Type Id"
                                           aria-describedby="basic-icon-default-phone2"
                                           asp-for="@Model.ProductTypeId" />
                                </div>
                            </div>

                            <div class="mb-3">
                                <label class="form-label" for="basic-icon-default-phone"> Storage Id</label>
                                <div class="input-group input-group-merge">
                                    <span id="basic-icon-default-phone2" class="input-group-text">
                                        <i class='bx bx-area'></i>
                                    </span>
                                    <input type="number"
                                           id="basic-icon-default-phone"
                                           class="form-control phone-mask"
                                           placeholder=" Storage Id"
                                           aria-label=" Storage Id"
                                           aria-describedby="basic-icon-default-phone2"
                                           asp-for="@Model.StorageId" />
                                </div>
                            </div>
                            <div class="mb-3">
                                <label class="form-label" for="basic-icon-default-phone"> Storage Type Id</label>
                                <div class="input-group input-group-merge">
                                    <span id="basic-icon-default-phone2" class="input-group-text">
                                        <i class='bx bx-area'></i>
                                    </span>
                                    <input type="number"
                                           id="basic-icon-default-phone"
                                           class="form-control phone-mask"
                                           placeholder=" Storage Type Id"
                                           aria-label=" Storage Type Id"
                                           aria-describedby="basic-icon-default-phone2"
                                           asp-for="@Model.StorageTypeId" />
                                </div>
                            </div>


                            <div class="container">
                                <div class="row">
                                    <div class="col text-center">
                                        <button class="btn btn-primary w-50" type="submit">Create</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
