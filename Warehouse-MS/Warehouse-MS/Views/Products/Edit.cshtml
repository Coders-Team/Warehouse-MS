@model Warehouse_MS.Models.Product

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<h3>Edit A Product</h3>

<form asp-controller="Products" asp-action="Edit" method="post" enctype="multipart/form-data">

    <div class="mb-3">
        <label for="exampleFormControlInput1" class="form-label">Name</label>
        <input asp-for="@Model.Name" class="form-control" id="exampleFormControlInput1">
    </div>

    <div class="mb-3">
        <label for="exampleFormControlInput1" class="form-label">Description</label>
        <input asp-for="@Model.Description" class="form-control" id="exampleFormControlInput1">
    </div>

    <div class="mb-3">
        <label for="exampleFormControlInput1" class="form-label">Date</label>
        <input asp-for="@Model.Date" class="form-control" id="exampleFormControlInput1">
    </div>

    <div class="mb-3">
        <label for="exampleFormControlInput1" class="form-label">ExpiredDate</label>
        <input asp-for="@Model.ExpiredDate" class="form-control" id="exampleFormControlInput1">
    </div>

    <div class="mb-3">
        <label for="exampleFormControlInput1" class="form-label">Photo</label>
        <input asp-for="@Model.Photo" class="form-control" id="exampleFormControlInput1">
    </div>

    <div class="mb-3">
        <label for="exampleFormControlInput1" class="form-label">ProductType</label>
        <input asp-for="@Model.ProductType" class="form-control" id="exampleFormControlInput1">
    </div>

    <div class="mb-3">
        <label for="exampleFormControlInput1" class="form-label">ProductTypeId</label>
        <input asp-for="@Model.ProductTypeId" class="form-control" id="exampleFormControlInput1">
    </div>

    <div class="mb-3">
        <label for="exampleFormControlInput1" class="form-label">SizeInUnit</label>
        <input asp-for="@Model.SizeInUnit" class="form-control" id="exampleFormControlInput1">
    </div>


    <div class="mb-3">
        <label for="exampleFormControlInput1" class="form-label">Storage</label>
        <input asp-for="@Model.Storage" class="form-control" id="exampleFormControlInput1">
    </div>

    <div class="mb-3">
        <label for="exampleFormControlInput1" class="form-label">StorageId</label>
        <input asp-for="@Model.StorageId" class="form-control" id="exampleFormControlInput1">
    </div>

    <div class="mb-3">
        <label for="exampleFormControlInput1" class="form-label">StorageType</label>
        <input asp-for="@Model.StorageType" class="form-control" id="exampleFormControlInput1">
    </div>


    <div class="mb-3">
        <label for="exampleFormControlInput1" class="form-label">StorageTypeId</label>
        <input asp-for="@Model.StorageTypeId" class="form-control" id="exampleFormControlInput1">
    </div>


    <div class="mb-3">
        <label for="exampleFormControlInput1" class="form-label">Transaction</label>
        <input asp-for="@Model.Transaction" class="form-control" id="exampleFormControlInput1">
    </div>


    <div class="mb-3">
        <label for="exampleFormControlInput1" class="form-label">Weight</label>
        <input asp-for="@Model.Weight" class="form-control" id="exampleFormControlInput1">
    </div>


    <button class="btn btn-primary" type="submit">Submit</button>

</form>

