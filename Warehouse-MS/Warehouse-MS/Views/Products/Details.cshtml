@model Warehouse_MS.Models.Product

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers




<div class="card" style="width: 18rem;">
    <img src=@Model.Photo class="card-img-top" alt="...">
    <div class="card-body">
        <h5 class="card-title">@Model.Name</h5>
        <p class="card-text">@Model.Weight</p>
        <p class="card-text">@Model.Date</p>
        <p class="card-text">@Model.Description</p>

        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
        <a class="btn btn-primary" asp-action="DeleteProduct" asp-route-id="@Model.Id">Delete</a>


    </div>
</div>
