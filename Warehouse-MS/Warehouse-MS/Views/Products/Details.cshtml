<div class="container-xxl flex-grow-2 container-p-y">
    <div class="card">
        <h5 class="card-header"> Product</h5>
        <div class="table-responsive text-nowrap">
            <table class="table">
                <thead class="table-light">
                   
                    <tr>
                        <th>Name</th>
                        <th>ExpiredDate</th>
                        <th>SizeInUnit</th>
                        <th>Weight</th>
                        <th>Date</th>
                        <th>BarcodeNum</th>
                        <th>ACTIONS</th>
                    </tr>
                </thead>
                <tbody class="table-border-bottom-0">

                    <tr>
                        <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>@Model.Name</strong></td>
                        <td>@Model.ExpiredDate</td>
                        <td>@Model.SizeInUnit</td>
                        <td>
                            <span class="badge bg-label-primary me-1">@Model.Weight</span>
                        </td>
                        <td>
                            @Model.Date
                        </td>
                        <td>
                            @Model.BarcodeNum
                        </td>
                        <td>
                            <div class="dropdown">
                                <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                    <i class="bx bx-dots-vertical-rounded"></i>
                                </button>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" href="/products/Edit?id=@Model.Id"><i class="bx bx-edit-alt me-1"></i> Edit</a>
                                    <a class="dropdown-item" href="/products/delete?id=@Model.Id"><i class="bx bx-trash me-1"></i> Delete</a>
                                </div>
                            </div>
                        </td>
                    </tr>
                    <br />
                    <br />
                    <br />

                </tbody>
            </table>
        </div>
    </div>
</div>
