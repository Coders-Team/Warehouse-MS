@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using Warehouse_MS.Models.DTO
@model List<WarehouseDto>
@{
    Layout = "_Layout";
}
<div class="container-xxl flex-grow-1 container-p-y">
    <div class="row row-cols-1 row-cols-md-3 g-4 mb-5">
        <div class="col">
            <div class="col" style="display: block;overflow: auto;">
                <div class="card" style="background-color: inherit;">
                    <div class="card-body">
                    <h5 class="text-center">Add Warehouse</h5>
                    </div>
                    <div class="card-body">
                        <div class="col text-center">
                            <a type="button" asp-controller="Warehouse" asp-action="Create" class="btn bi-plus btn-icon ">
                                <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" fill="currentColor" class="bi bi-plus-circle" viewBox="0 0 16 16"> <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/> <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z"/> </svg>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        @foreach (var item in Model)
        {
            <div class="col">
                <div class="col">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">@item.Name</h5>
                            <h6 class="card-subtitle text-muted">@item.Location</h6>
                        </div>
                        <div class="card-body">
                            <p class="card-text">@item.Description</p>
                            <a class="btn btn-primary" href="/Warehouse/Details?id=@item.Id">Details</a>
                            <a class="btn btn-primary" href="/Warehouse/Edit?id=@item.Id">Edit</a>
                            <a class="btn btn-danger" href="/Warehouse/Delete?id=@item.Id">Delete</a>                          
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
