@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using Warehouse_MS.Models.DTO
@model WarehouseDto

<div>
    <h4>@Model.Name</h4>
    <hr />
    @if (Model.Storages.Count == 0)
            {
        <p>No storage found in this Warehouse</p>
    }
    else
    {
    <table border=1 class="table">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Name
            </th>
            
            <th>
                SizeInUnit
            </th>
            <th>
                LocationInWarehouse
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Storages) {
     <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>    
             <td>
                @Html.DisplayFor(modelItem => item.SizeInUnit)
            </td> 
            <td>
                @Html.DisplayFor(modelItem => item.LocationInWarehouse)
            </td>
          
     </tr>
        }
    </tbody>
</table>
}
</div>