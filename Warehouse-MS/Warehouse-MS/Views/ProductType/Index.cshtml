@model IEnumerable<Warehouse_MS.Models.ProductType>
@using Warehouse_MS.Models
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
@{
    ViewData["Title"] = "ProductType Page";
}



<h1 class="mt-4 mb-5"><strong>All ProductType</strong></h1>
<a class="btn btn-primary btn-lg " asp-controller="ProductType" asp-action="Index"> Back </a>
<a class="btn btn-primary btn-lg " asp-controller="ProductType" asp-action="goAddView"> Add new ProductType </a>
<br />



<br />

@if (TempData["AlertMessage"] != null)
{
    <div class="alert-success" style=" color: red; height:30px ;font-size: 15px;font-family: 'Raleway Bold';">
        <strong>Thank You ! </strong>@TempData["AlertMessage"]

    </div>
}
<br />

<section style="background-color: #eee;">
    <div class="text-center container py-5">

        <div class="row">
            @foreach (ProductType productType in Model)
            {



                @*//// To fromat tha product data as bootstrap card*@
                <section style="background-color: #eee;">
                    <div class="card mb-3" style="max-width: 450px;">
                        <div class="bg-image hover-zoom ripple ripple-surface ripple-surface-light"
                             data-mdb-ripple-color="light">

                            <a href="#!">
                                <div class="mask">
                                    <div class="d-flex justify-content-start align-items-end h-100"></div>
                                </div>
                                <div class="hover-overlay">
                                    <div class="mask" style="background-color: rgba(251, 251, 251, 0.15);"></div>
                                </div>
                            </a>
                        </div>
                        <div class="card-body">

                            <h5 class="card-title mb-3">@productType.Name</h5>


                            <h6 class="mb-3">@productType.Description</h6>


                            <a class="btn btn-primary btn-lg " asp-controller="ProductType" asp-action="goEditView" asp-route-id=@productType.Id>update</a>
                            <a class="btn btn-primary btn-lg " asp-controller="ProductType" asp-action="Delete" asp-route-id=@productType.Id> delete </a>

                        </div>
                    </div>
                </section>


            }


        </div>
    </div>
</section>






