
@using Warehouse_MS.Models.DTO
@model List<WarehouseDto>
@{ Layout = "_Empty"; }
<h4>Storage Page</h4>
<hr />
<p>
    <a asp-controller="Storage" asp-action="Create">Create New</a>
</p>




<section style="background-color: #eee;">
    <div class="text-center container py-5">

        <div class="row">
            @foreach (WarehouseDto warehouseDto in Model)
            {
                <h2>@warehouseDto.Name</h2>
                <br>
        @foreach (StorageDto storageDto in warehouseDto.Storages)
        {
        <div class="col-lg-4 col-md-6 mb-4">
            <div class="card">
                <div class="card-body">

                    <h5 class="card-title mb-3">Name: @storageDto.Name</h5>
                    <h5 class="card-title mb-3">Size: @storageDto.SizeInUnit</h5>
                    <h6 class="card-title mb-3">Location in: @storageDto.LocationInWarehouse</h6>
                    <h6 class="mb-3">Description: @storageDto.Description</h6>
                    <a class="btn btn-primary" asp-controller="Storage" asp-action="Details" asp-route-id=@storageDto.Id>Details</a>
                    <a class="btn btn-primary" asp-controller="Storage" asp-action="Edit" asp-route-id=@storageDto.Id>Edit</a>


                    <a  class="btn btn-danger" asp-controller="Storage" asp-action="Delete" asp-route-id=@storageDto.Id>Delete</a>
                   


                 


                </div>
            </div>
        </div>          }

            }
                    </div>
    </div>
</section>








