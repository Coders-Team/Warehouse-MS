@using Warehouse_MS.Models.DTO
@model List<StorageDto>
@{
    Layout = "_Empty";
}
<h4>Storage Page</h4>
    <hr />
<p>
    <a asp-controller="Storage" asp-action="Create">Create New</a>
</p>
<table border=1 class="table">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Name
            </th>
            <th>
                SizeInUnit
            </th>
            <th>
                LocationInWarehouse
            </th>
            <th>
                Description
            </th>
            <th>
                Edit
            </th>
            <th>    
                Details
            </th>
            <th>
                Delete
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SizeInUnit)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LocationInWarehouse)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                <a asp-controller="Storage" asp-action = "Edit" asp-route-id =@item.Id>Edit</a>
            </td>
            <td>
                <a asp-controller="Storage" asp-action="Details" asp-route-id=@item.Id>Details</a>
            </td>
            <td>
                <a asp-controller="Storage" asp-action="Delete" asp-route-id=@item.Id>Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
