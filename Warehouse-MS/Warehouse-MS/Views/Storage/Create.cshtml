@model Warehouse_MS.Models.DTO.StorageDto
@{
    Layout = "_Layout";
}
<div class="container-xxl flex-grow-1 container-p-y">
    <div class="card mb-4">
      <h5 class="card-header">Create Storage</h5>
      <hr class="my-0" />
      <div class="card-body">
        <form asp-controller="Storage" asp-action="Create" method="post">
            <input type="hidden" asp-for="@Model.WarehouseId" value=@ViewData["warehouseid"] />
          <div class="row">
            <div class="mb-3 col-md-6">
              <label for="basic-icon-default-fullname" class="form-label">Name</label>
              <input type="text"
              class="form-control"
              id="basic-icon-default-fullname"
              placeholder="Name"
              aria-label="Name"
              aria-describedby="basic-icon-default-fullname2"
              asp-for="Name" />
            </div>
            <div class="mb-3 col-md-6">
                    <label class="form-label" for="country">Location In Warehouse</label>
                    <input type="text"
                                           id="basic-icon-default-company"
                                           class="form-control"
                                           placeholder="Location"
                                           aria-label="Location"
                                           aria-describedby="basic-icon-default-company2"
                                           asp-for="@Model.LocationInWarehouse" />
                  </div>
            <div class="mb-3 col-md-6">
              <label for="basic-icon-default-company" class="form-label">Description</label>
              <input type="text"
                                   id="basic-icon-default-company"
                                   class="form-control"
                                   placeholder="Description"
                                   aria-label="Description"
                                   aria-describedby="basic-icon-default-company2"
                                   asp-for="@Model.Description" />
            </div>
            <div class="mb-3 col-md-6">
              <label for="basic-icon-default-phone" class="form-label">Size In Unit</label>
              <input type="text"
                                   id="basic-icon-default-phone"
                                   class="form-control phone-mask"
                                   placeholder="SizeInUnit"
                                   aria-label="SizeInUnit"
                                   aria-describedby="basic-icon-default-phone2"
                                   asp-for="@Model.SizeInUnit" />
            </div>
          </div>
          <div class="mt-2">
            <button type="submit" class="btn btn-primary me-2">Save changes</button>
            <a href="/Storage/index"class="btn btn-outline-secondary">Cancel</a>
          </div>
          </form>
        </div>
      </div>
    
  </div>
