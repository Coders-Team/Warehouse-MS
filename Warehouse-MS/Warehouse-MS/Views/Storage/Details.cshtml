@model Warehouse_MS.Models.DTO.StorageDto
@{
    Layout = "_Layout";
}

@*<h4>@Model.Name</h4>
<hr />*@
@if (Model.Products.Count == 0)
{
    <p>No product found in this Storage</p>
}
<div class="container-xxl flex-grow-1 container-p-y">
    <div class="card">
        <h5 class="card-header">Storage Product</h5>
        <div class="table-responsive text-nowrap">
            <table class="table">
                <thead class="table-light text-center">
                    <tr>
                        <th>Name</th>
                        <th>ExpiredDate</th>
                        <th>SizeInUnit</th>
                        <th>Weight</th>
                        <th>Date</th>
                        <th>BarcodeNum</th>
                        <th>ACTIONS</th>
                    </tr>
                </thead>
                <tbody class="table-border-bottom-0 text-center">
                    @foreach (var item in Model.Products)
                    {
                        <tr>
                            <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>@item.Name</strong></td>
                            <td>@item.ExpiredDate</td>
                            <td>@item.SizeInUnit</td>
                            <td>
                                <span class="badge bg-label-primary me-1">@item.Weight</span>
                            </td>
                            <td>
                                @item.Date
                            </td>
                            <td>
                                @item.BarcodeNum
                            </td>
                            <td>
                                <div class="dropdown">
                                    <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                        <i class="bx bx-dots-vertical-rounded"></i>
                                    </button>
                                    <div class="dropdown-menu">
                                        <a class="dropdown-item" href="/products/details?id=@item.Id"> <i class='bx bxs-detail'></i> Details</a>
                                        <a class="dropdown-item" href="/products/Edit?id=@item.Id"><i class="bx bx-edit-alt me-1"></i> Edit</a>
                                        <a class="dropdown-item" href="/products/Delete?id=@item.Id"><i class="bx bx-trash me-1"></i> Delete</a>
                                        <a class="dropdown-item" href="/products/Create"><i class="bx bx-add-to-queue me-1"></i> Add Product</a>

                                    </div>
                                </div>
                            </td>
                        </tr>

                    }
                </tbody>
            
            </table>
        </div>
    </div>

    <div class="buy-now">
      <a
        href="/product/create"
        class="btn btn-danger btn-buy-now"
        >Add Product</a
      >
    </div>

</div>
