@{
    Layout = "_Lock";
}
<div class="lockscreen-wrapper">
  <div class="lockscreen-logo">
    <a href="#"><b>Admin</b> WMS</a>
  </div>
  <div class="lockscreen-name">@ViewData["user"]</div>
  <div class="lockscreen-item">
    <div class="lockscreen-image">
      <img src="../../dist/img/user1-128x128.jpg" alt="User Image">
    </div>
    <form class="lockscreen-credentials" asp-controller = "Auth" asp-action="Logout" method="post">
      <div class="input-group">
          <input type="hidden" id="Username" name="Username" value=@ViewData["user"] />
        <input type="password" class="form-control" placeholder="password" id="Password" name="Password">
        <div class="input-group-append">
          <button type="submit" class="btn">
            <i class="fas fa-arrow-right text-muted"></i>
          </button>
        </div>
      </div>
    </form>
  </div>
  <div class="help-block text-center">
        @if (ViewData["match"] == null)
        {
            <p style="text-align:center; color:red;">@ViewData["data"]</p>
        }
        else
        {
            <p style="text-align:center; color:red;">@ViewData["match"]</p>
        }
  </div>
  <br />
  <div class="help-block text-center">
    Enter your password to retrieve your session
  </div>
  <div class="text-center">
    <a href="/Auth/index">Or Login as a different user</a>
  </div>
</div>
}